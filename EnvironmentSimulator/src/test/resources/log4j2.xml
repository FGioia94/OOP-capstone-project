<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Console appender for tests - only show warnings and errors -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    
    <Loggers>
        <!-- Root logger set to ERROR level for tests to reduce noise -->
        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
        
        <!-- You can override specific packages if needed -->
        <!-- <Logger name="factoryMethod" level="warn" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger> -->
    </Loggers>
</Configuration>
